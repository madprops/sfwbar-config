# Override gtk theme
theme = "Adwaita-dark"
# Override gtk icon theme
# IconTheme = "Adwaita"

# Display minimized windows on taskbars across all outputs
# DisownMinimized = true

# Select terminal emulator to use
Set Term = "konsole"

TriggerAction "SIGRTMIN+1", SwitcherEvent "forward"
TriggerAction "SIGRTMIN+2", SwitcherEvent "back"

Function("SfwbarInit") {
#  Config "PopUp 'XVolumeWindow' { AutoClose = true }"
}

# Custom widget scanner
scanner {
  SocketClient("/tmp/sockpupper.sock", "custom_widget") {
    CustomText = Grab()
  }
}

# Window Placer
placer {
  xorigin = 5  # place the first window at X% from the left
  yorigin = 5  # place the first window at X% from the top
  xstep = 5    # step by X% of desktop horizontally
  ystep = 5    # step by X% of desktop vertically
  children = true
}

# Task Switcher
switcher {
  interval = 700
  icons = true
  labels = false
  cols = 5
}

layout {

  size = "100%"
  layer = "top"
  /* mirror = "*" */
  monitor = "DP-1"
  exclusive_zone = "auto"
#  sensor = 300
#  monitor = "eDP-1"

  css = "* { min-height: 20px; }"

  taskbar {
    style = "taskbar"
    rows = 1;
    icons = true;
    labels = true;
    sort = false;
    filter = workspace;
    group = false;
    action[3] = Menu "winops"
    action[Drag] = Focus
  }

  label {
    css = "* { -GtkWidget-hexpand: true; }"
  }

  label {
    style = "custom_widget"
    value = $CustomText
    trigger = "custom_widget"
    tooltip = "Custom Widget - Click to interact"

    # Left click action
    action[LeftClick] = Exec "/home/yo/.config/labwc/scripts/reset.rb"

    # Right click action
    #action[RightClick] = SetValue "custom_widget", "Do nothing for now"

    # Scroll actions
    action[ScrollUp] = Exec "/home/yo/.config/labwc/scripts/inc_timer.rb"
    action[ScrollDown] = Exec "/home/yo/.config/labwc/scripts/dec_timer.rb"
  }

  pager {
    style = "pager"
    rows = 1
    /* pins = "1","2","3","4" */
    preview = false
    action[Drag] = WorkspaceActivate
    action[ScrollUp] = Exec "/home/yo/.config/labwc/scripts/volup.sh"
    action[ScrollDown] = Exec "/home/yo/.config/labwc/scripts/voldown.sh"
  }

  include("cpu.widget")
  include("memory.widget")

  tray {
    rows = 1
  }
}

#CSS
#hidden {
  -GtkWidget-visible: false;
}

button,
button image {
  min-height: 0px;
  outline-style: none;
  box-shadow: none;
  background-image: none;
  border-image: none;
}

label {
  font: 16px Sans;
}

image {
  -ScaleImage-symbolic: true;
}

button#startmenu,
button#module {
  border: none;
  padding: 3px;
  margin: 0px;
  -GtkWidget-vexpand: true;
}

button#startmenu image,
button#module image {
  min-height: 16px;
  min-width: 16px;
  padding: 0px;
  margin: 0px;
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
}

button#taskbar_item {
  padding: 3px;
  border-radius: 3px;
  border-width: 0px;
  -GtkWidget-hexpand: false;
  font: 16px Sans;
}

grid#taskbar > :not(:last-child) button#taskbar_item {
  border-radius: 0px;
  border-right: 1px solid alpha(@theme_fg_color,0.15);
}

button#pager_item.focused,
button#taskbar_item.focused {
  background-color: rgb(84, 93, 102);
}

button#taskbar_item.minimized label {
  color: alpha(currentColor, 0.6);
}

button#taskbar_item:hover {
  background-color: rgb(96, 106, 116);
}

button#taskbar_item grid {
  -GtkWidget-valign: center;
}

button#taskbar_item image {
  min-width: 20px;
  min-height: 20px;
  padding-right: 6px;
  -ScaleImage-symbolic: false;
}

button#taskbar_item label {
}

button#tray_item {
  margin: 0px;
  border: none;
  padding: 0px;
}

button#tray_item.passive {
  -GtkWidget-visible: false;
}

button#tray_item image {
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
  min-height: 16px;
  min-width: 16px;
  padding: 3px;
  margin: 0px;
  border: none;
}

grid#pager {
  border-radius: 3px;
  border-color: rgb(100, 100, 100);
  border-style: solid;
  border-width: 0px;
  margin: 0px;
  padding: 0px;
  font: 16px Sans;
}

button#pager_item {
  border-radius: 5px;
  border: none;
  outline: 0px;
  margin-right: 3px;
  margin-left: 3px;
  padding: 3px;
  -GtkWidget-halign: center;
  -GtkWidget-valign: center;
}

button#pager_preview {
  border-radius: 0;
  border-color: #000000;
  border-width: 0.25mm;
  color: #777777;
  min-width: 5cm;
  min-height: 2.8125cm;
}

#menu_item,
#menu_item image,
#menu_item label {
  -GtkWidget-halign: start;
}

#menu_item image {
  min-width: 16px;
  min-height: 16px;
  padding-right: 2px;
}

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
  font: 10px Sans;
}

chart#cpu_chart {
  background: rgba(127,127,127,0.3);
  min-width: 9px;
  -GtkWidget-vexpand: true;
  margin: 2px;
  border: 1px solid @theme_fg_color;
  color: red;
}

progressbar#memory {
  -GtkWidget-direction: top;
  -GtkWidget-vexpand: true;
  min-width: 9px;
  border: 1px solid @theme_fg_color;
  margin: 2px;
}

progressbar#memory trough {
  min-height: 2px;
  min-width: 9px;
  border: none;
  border-radius: 0px;
  background: rgba(127,127,127,0.3);
}

progressbar#memory progress {
  -GtkWidget-hexpand: true;
  min-width: 9px;
  border-radius: 0px;
  border: none;
  margin: 0px;
  background-color: alpha(green,0.9);
}

grid#switcher_item.focused image,
grid#switcher_item.focused {
  background-color: #bbddff;
}

grid#switcher_item image,
grid#switcher_item {
  min-width: 50px;
  min-height: 50px;
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-direction: right;
  -GtkWidget-hexpand: true;
  -ScaleImage-symbolic: false;
}

window#switcher {
  border: 1px solid @borders;
  border-radius: 6px;
  padding: 60px;
  -GtkWidget-hexpand: true;
}

grid#switcher {
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-hexpand: true;
}

label#sway_lang {
  margin-left: 3px;
  margin-right: 5px;
}

label#custom_widget {
  padding-left: 6px;
  padding-right: 6px;
  -GtkWidget-valign: center;
  font: 16px Sans;
  color: #ffffff;
  background-color: rgba(64, 74, 84, 0.8);
  border-radius: 3px;
  border: 1px solid rgba(100, 100, 100, 0.5);
  margin-left: 3px;
  margin-right: 3px;
}

label#custom_widget:hover {
  background-color: rgba(84, 94, 104, 0.9);
}
